---
import BaseLayout from '../layouts/BaseLayout.astro'

import Hero from '../components/Hero.svelte'
import Header from '../components/Header.svelte'
import Footer from '../components/Footer.svelte'

---
<BaseLayout
  title="Lorem.space"
  theme="synthwave"
>
  <header class="md:p-5 lg:p-20 bg-cover min-h-[50vh] bg-bottom" style="background-image: url(/screenshot.svg);">
    <Header
      title=""
      links={[
        {
          label: "Get Started",
          href: "/start"
        },
        {
          label: "Documentation",
          href: "/documentation"
        },
        {
          label: "Team",
          href: "/team"
        },
        {
          label: "How to cite",
          href: "/cite"
        }
      ]}
    />

    <Hero
      client:load
      title="WashU Comparative"
      desc="Genome Browser"
    />

  </header>

  
  <Footer
    title="WashU Comparative Genome Browser"
    contact="yunkzo@gmail.com"
  />

</BaseLayout>


